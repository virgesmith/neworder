{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/test/testharness",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [{"Name": "PYTHONPATH", "Value": "example"}, {"Name": "LD_LIBRARY_PATH", "Value": "src/lib"}],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(gdb) Test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/test/testharness",
      "args": ["module.py"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src/test",
      "environment": [{"Name": "PYTHONPATH", "Value": "."}, {"Name": "LD_LIBRARY_PATH", "Value": "../lib"}],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }

  ]
}